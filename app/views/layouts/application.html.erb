<!DOCTYPE html>
<html>
  <head>
    <title>CS3300</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <nav class="navbar navbar-expand-lg navbar-light bg-success text-dark font-weight-bold">  
  <div class="nav-item active d-flex align-items-center">      
    <% if user_signed_in? %>
      <a style="font-size: 26px; font-family: 'Fantasy', monospace; font-weight: 400;"> Hello!!, <%=current_user.email%> </a>
      
    <% else %>
      <a style="font-size: 26px; font-family: 'Fantasy', monospace; font-weight: 400;"> Hello there!! </a>
    <% end %>
  </div>
  
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav d-flex align-items-center" style="font-size: 23px">

      <li class="nav-item active d-flex align-items-center">
        <a class="nav-link " href="#"><%= link_to "Home", root_path %>  </a>
      </li>

      <li class="nav-item active d-flex align-items-center">
        <a class="nav-link " href="#"><%= link_to "Profile", edit_user_registration_path %>  </a>
      </li>

      <li class="nav-item active d-flex align-items-center">
        <a class="nav-link " href="#"><a><% if not user_signed_in? %> <%= link_to "Login", new_user_session_path %>
        <% else %> <%= link_to "Logout", destroy_user_session_path, method: :delete %> <% end %> </a>  </a>
      </li>
      
      <% if not user_signed_in? %>
        <li class="nav-item active d-flex align-items-center">
          <a class="nav-link " href="#"><%= link_to "Register", new_user_registration_path%>  </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>
</nav>

  <style type="text/css">
  body { background: lightblue !important; } # Adding !important forces the browser to overwrite the default style applied by Bootstrap 
  </style>

  <div class="container center"
    <body>
      <%= yield %>
    </body>
  </div>
</html>